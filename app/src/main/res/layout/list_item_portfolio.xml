                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_marginTop="8dp"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:id="@+id/portfolio_item_container">

    <TextView android:layout_width="match_parent"
