<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".addStock.AddStockActivity">
    <EditText
            android:id="@+id/et_add_stock_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:lines="1"
            android:inputType="text"
            android:hint="AAPL"

            android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/bt_add_stock_search"
    />
    <Button
            android:id="@+id/bt_add_stock_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search"
            app:layout_constraintLeft_toRightOf="@+id/et_add_stock_input"
            app:layout_constraintBottom_toBottomOf="@+id/et_add_stock_input"
            app:layout_constraintEnd_toEndOf="parent"
    />

    <RelativeLayout
            android:id="@+id/layout_add_stock_detail"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@+id/et_add_stock_input"
            android:visibility="visible">

        <TextView
                android:id="@+id/tv_add_stock_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Company Name: "

        />
        <TextView
                android:id="@+id/tv_add_stock_symbol"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Symbol: "
                android:layout_below="@id/tv_add_stock_name"/>
        <TextView
                android:id="@+id/tv_add_stock_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Price: "
                android:layout_below="@id/tv_add_stock_symbol"/>
        <Button
                android:id="@+id/bt_add_stock_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:text="@string/add_stock"/>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>